#!/usr/bin/env bash

platform=`uname`
echo platform=${platform}

# TODO: check for dependencies, with clear error messages

if [ "Linux" == "${platform}" ] ; then
    apt update
    apt upgrade -y python
fi

python3 --version
which python || echo No python
which python3 || echo No python3

set -e
set -x


cd mpc
python3 -m venv env
. env/bin/activate
pip install --upgrade pip
make setup
